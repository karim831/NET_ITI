@{
    ViewData["Title"] = "Admin Panel";
}
@model AdminProductsView
<div class="container-fluid">
    <div class="row">

        <!-- Main Content -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Kareem Store</h1>
                <a href="/Admin/Logout" class="btn btn-danger">Logout</a>
            </div>

            <!-- Admin Form -->
            <form>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Id"></label>
                        <input asp-for="Id" class="form-control" readonly>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" readonly>
                    </div>
                </div>
            </form>

            <!-- Product Table -->
            <div class="mt-4">
                <div class="d-flex justify-content-between mb-3">
                    <h2>Products</h2>
                    <a href="/Admin/AddProduct" class="btn btn-success">Add Product</a>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model != null && Model.Products != null){
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td>@product.Id</td>
                                    <td>@product.Name</td>
                                    <td>@product.Price.ToString("C")</td>
                                    <td>@product.Stock</td>
                                    <td>
                                        <a href="/Admin/UpdateProduct/@product.Id" class="btn btn-warning btn-sm">Update</a>
                                        <a href="/Admin/DeleteProduct/@product.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<script>
    $(document).ready(function () {
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
        });
    });
</script>
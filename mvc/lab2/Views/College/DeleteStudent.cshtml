@using lab2.Models;


@model Student;

<div class="container mt-4">
    <h2 class="text-danger">Delete Student</h2>
    <h3>Are you sure you want to delete this student?</h3>
    <div class="card mt-3">
        <div class="card-body">
            <h4 class="card-title">Student: @Model.Id</h4>
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                <dt class="col-sm-3">Department Id</dt>
                <dd class="col-sm-9">@Model.DepartmentId</dd>
            </dl>
        </div>
    </div>
    <div class="mt-3">
        <a href="/College/DeleteStudentConfirmed?id=@Model.Id" class="btn btn-danger">Delete</a>
        <a href="/College/StudentTable" class="btn btn-secondary">Cancel</a>
    </div>
</div>
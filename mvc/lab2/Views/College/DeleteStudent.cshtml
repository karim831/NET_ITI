@using lab2.Models;


@model Student;

<h2>Delete Student</h2>

<h3>Are you sure you want to delete this student?</h3>

<div>
    <h4>Student : @Model.Id</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">DepartmentId</dt>
        <dd class="col-sm-10">@Model.DepartmentId</dd>
    </dl>
</div>

<a href="/College/DeleteStudentConfirmed?id=@Model.Id" class="DangerButton">Delete</a>

<a href="/College/StudentTable" class="NoAction">Cancel</a>
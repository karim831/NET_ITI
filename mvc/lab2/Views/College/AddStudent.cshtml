@using lab2.Models

<div class="container mt-4">
    <h2>Student Form</h2>
    <form action="/College/AddStudentConfirmed" method="post" class="mt-3">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text"   name="Name" class="form-control" id="Name" placeholder="Enter student name" />
        </div>
        <div class="form-group">
            <label for="DepartmentId">Department ID</label>
            <input type="number" name="DepartmentId" class="form-control" id="DepartmentId" placeholder="Enter department ID" />
        </div>
        <button type="submit" class="btn btn-primary mt-3">AddStudent</button>
    </form>
</div>
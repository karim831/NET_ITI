@using lab2.Models
@model Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2>Student Form</h2>
        <form asp-action="AddStudentConfirmed" method="post" class="mt-3">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter student name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId"></label>
                <input asp-for="DepartmentId" class="form-control" placeholder="Enter department ID" />
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Add Student</button>
        </form>
    </div>
</body>
</html>